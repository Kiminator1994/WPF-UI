<Application x:Class="WpfUI_MVVM.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfUI_MVVM"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
         <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Page.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Styles/Image.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Styles/Text.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Styles/Button.xaml"></ResourceDictionary>
                <ResourceDictionary Source="Utilities/DataTemplate.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
         </ResourceDictionary>
    </Application.Resources>
</Application>
